.content
  padding 1em 2em

blockquote
  font-size 2.3em
  margin 0.25em 0
  padding 0.25em 0.5em
  line-height 1.3
  position relative
  color $gray-light

  &:before
    display block
    content "\201C"
    font-size 2em
    position absolute
    left -0.3em
    top -0.3em
    color $gray

  cite
    color $brand-primary
    display block
    margin-top 5px

    &:before
      content "\2014 \2009"
