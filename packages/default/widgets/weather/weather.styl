div.weather
    display: flex
    flex-direction: row

    div.forecast
        width: 25%
        text-align: center

        div.date
            font-size: 34px
            font-weight: 800

        img.icon
            filter: grayscale(100%) brightness(45%) contrast(300%) sepia(100%)
            width: 60%

        div.conditions
            font-size: 24px

        div.temp
            font-size: 40px
