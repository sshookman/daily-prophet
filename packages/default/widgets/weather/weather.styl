div.weather
    display: flex
    flex-direction: row

    div.forecast
        width: 25%
        text-align: center

        div.date
            font-size: 30px
            font-family: lumos
            font-weight: 600

        img.icon
            filter: grayscale(100%) brightness(45%) contrast(300%) sepia(100%)
            width: 60%

        div.conditions
            font-size: 28px
            font-family: lumos
            font-weight: 600

        div.temp
            font-size: 28px
            font-family: lumos
            font-weight: 600
